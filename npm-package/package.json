{
  "name": "@SergeyBondar93/test-independent-npm-package",
  "version": "1.3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/SergeyBondar93/test-npm-publishing-changesets.git"
  },
  "private": false,
  "main": "dist/npm-package-index.js",
  "type": "module",
  "exports": {
    ".": "./dist/npm-package-index.js"
  },
  "scripts": {
    "prebuild": "node ../scripts/clean.js",
    "build": "npx esbuild src/index.ts --bundle --platform=node --format=esm --outfile=./dist/npm-package-index.js",
    "prepare": "npm run build"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "release": {
    "tagFormat": "${name}@${version}",
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/npm",
        {
          "npmPublish": true
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": ["package.json", "CHANGELOG.md"],
          "message": "chore(release): ${nextRelease.version} [skip ci]"
        }
      ],
      "@semantic-release/github"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0"
  }
}
